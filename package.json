{
  "name": "adriel-portfolio",
  "version": "1.0.0",
  "description": "Adriel Magalona's Personal Portfolio Website",
  "main": "index.html",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "vercel --prod --confirm",
    "deploy:preview": "vercel --confirm",
    "purge:css": "purgecss --css style.css --content index.html 'src/**/*.ts' --output ./public --safelist active open modal show hide loading article about background projects organizations faq achievements responsive-img-container progressive-img timeline-item timeline-list navbar-list sidebar-info",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "lighthouse": "lighthouse http://localhost:4173 --view --output=html --output-path=./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "perf:audit": "npm run build && npm run preview & sleep 3 && npm run lighthouse && kill %1",
    "perf:budget": "lighthouse http://localhost:4173 --budget-path=./performance-budget.json --output=html --output-path=./budget-report.html"
  },
  "keywords": [
    "portfolio",
    "web-developer",
    "computer-science",
    "student",
    "typescript",
    "javascript",
    "html",
    "css"
  ],
  "author": "Adriel Magalona <dagsmagalona@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adr1el-m/portfolio"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@axe-core/cli": "^4.8.2",
    "@lhci/cli": "^0.15.1",
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "lighthouse": "^12.2.1",
    "pa11y-ci": "^4.0.1",
    "puppeteer": "^24.27.0",
    "purgecss": "^7.0.2",
    "sharp": "^0.34.4",
    "terser": "^5.44.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@types/three": "^0.180.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "three": "^0.180.0",
    "vanilla-tilt": "^1.8.1",
    "web-vitals": "^5.1.0"
  },
  "overrides": {
    "chrome-launcher": "^1.2.1",
    "tmp": "^0.2.3",
    "globby": "^11.1.0"
  }
}
